// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_update": false,
  "theme": "Fleet Dark",
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },
  "restore_on_startup": "none",
  "snippet_sort_order": "top",
  "project_panel": {
    "auto_fold_dirs": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"] // Use nixd instead of nil.
    },
    "Python": {
      "language_servers": ["!pylsp", "..."] // Use pyright instead of pylsp.
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "YAML": {
      "format_on_save": "on"
    },
    "TOML": {
      "format_on_save": "on"
    }
  },
  "language_servers": [
    "vtsls", // Make sure vtsls is first in the list for language server actions.
    "!typescript-language-server", // Use vtsls instead.
    "!biome", // Enable biome per project.
    "..."
  ],
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative",
            "importModuleSpecifierEnding": "js"
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "auto_install_extensions": {
    "codebook": true,
    "dart": true,
    "docker-compose": true,
    "dockerfile": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "nix": true,
    "ruff": true,
    "toml": true
  }
}
